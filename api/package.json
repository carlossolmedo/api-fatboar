{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "author": "Carlos Olmedo",
  "scripts": {
    "transpile": "babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/bin/www",
    "dev": "NODE_ENV=dev npm-run-all build server",
    "prod": "NODE_ENV=prod npm-run-all build server",
    "start": "npm run prod",
    "test": "jest server/__test__/*.test.js",
    "watch:dev": "NODE_ENV=dev nodemon --exec babel-node --presets=@babel/preset-env server/bin/www"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__test__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "mongoose": "^5.11.7",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "swagger": "^0.7.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2"
  }
}
