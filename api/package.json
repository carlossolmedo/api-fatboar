{
    "name": "api",
    "version": "1.0.0",
    "private": true,
    "author": "Carlos Olmedo",
    "scripts": {
        "transpile": "babel ./server --out-dir dist",
        "clean": "rimraf dist",
        "build": "npm-run-all clean transpile",
        "server": "node ./dist/bin/www",
        "dev": "NODE_ENV=dev npm-run-all build server",
        "prod": "NODE_ENV=prod npm-run-all build server",
        "start": "npm run prod",
        "test": "NODE_ENV=test mocha --exit",
        "watch:dev": "NODE_ENV=dev nodemon --exec babel-node --presets=@babel/preset-env server/bin/www",
        "watch:test": "NODE_ENV=test nodemon --exec babel-node --presets=@babel/preset-env server/bin/www",
        "pretty": "prettier -w server/* test/*.js"
    },
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "server/*",
            "public/*"
        ],
        "ignore": [
            "./test/*",
            "*.test.js",
            "*.spec.js"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "directories": {
        "test": "./test"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "~1.4.4",
        "cors": "^2.8.5",
        "debug": "~2.6.9",
        "express": "~4.16.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.11.7",
        "morgan": "~1.9.1",
        "npm-run-all": "^4.1.5",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "swagger": "^0.7.5",
        "swagger-ui-express": "^4.1.5",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/node": "^7.12.10",
        "@babel/preset-env": "^7.12.10",
        "@babel/register": "^7.12.10",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "dotenv": "^8.2.0",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.6",
        "rimraf": "^3.0.2"
    }
}
